ATMPM.res: ATMPM.rc ATMPM.h
   rc -r ATMPM.rc 

ATMPM.exe:ATMPM.obj ATMPM.res clientcl.lib
    $(LINKER) $(LFLAGSPM) ATMPM.obj ,ATMPM.exe ,nul , $(LIBLIST) clientcl.lib ,ATMPM.def;
    rc ATMPM.res ATMPM.exe 

ADMINPM.res: ADMINPM.rc ADMINPM.dlg ADMINPM.h
   rc -r ADMINPM.rc 

ADMINPM.exe:ADMINPM.obj ADMINPM.res clientcl.lib
    $(LINKER) $(LFLAGSPM) ADMINPM.obj ,ADMINPM.exe , nul, $(LIBLIST) clientcl.lib ,ADMINPM.def;
    rc ADMINPM.res ADMINPM.exe 

