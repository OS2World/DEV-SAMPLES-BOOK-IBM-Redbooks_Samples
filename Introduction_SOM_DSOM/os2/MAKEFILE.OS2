SC         = sc
CC         = icc
IMPLIB     = implib
RC         = rc
RCFLAGS    = -nologo
CFLAGS     = -D_OS2 -W3 -c -Q+ -Ss+ -Gd- -Ge+ -Gm- -Gs+ /Wgenpro /Ti
CFLAGSPM   = -D_OS2 /Ti /Ss /Q /G3 /C /Gm+
CFLAGSDLL  = -D_OS2 -W3 -c -Q+ -Ss+ -Gd- -Ge- -Gm- -Gs+ /Wgenpro /Ti
LINKER     = link386
LFLAGS     = /exepack /packd /packc /align:4 /stack:16000 /pm:vio /noi /nol /nod /noe /CO
LFLAGSPM   = /exepack /packd /packc /align:4 /stack:16000 /pm:pm /noi /nol /nod /noe /CO
LIBLIST    = dde4mbs+os2386+somtk
LIBLISTD   = dde4mbs+os2386+somtk
DLLLIST    = fileutil.dll \
             cdb.dll      \
             customer.dll \
             bdb.dll      \
             account.dll  \
             svrbrokr.dll \
             banksvr.dll  \
             clientcl.dll  
EXELIST    = admin.exe atm.exe adminpm.exe atmpm.exe

SOMIRFILE  = som.ir

STDINCLUDE = $(SOMBASE)\include

FU_OBJS    = fileutil.o fileini.o check.o
CDB_OBJS   = cdb.o cdbini.o check.o
CUST_OBJS  = customer.o custmgr.o custini.o check.o
BDB_OBJS   = bdb.o bdbini.o check.o
ACC_OBJS   = account.o accmgr.o accini.o checking.o savings.o fee.o check.o
SB_OBJS    = svrbrokr.o brokrini.o check.o
BSVR_OBJS  = banksvr.o bsvrini.o check.o
CLC_OBJS   = clientcl.o clcini.o check.o

CLIENTINCLS= bankdef.h  \
             clientcl.h 

IDLLIST    = accmgr.idl   \
             account.idl  \
             banksvr.idl  \
             bdb.idl      \
             cdb.idl      \
             checking.idl \
             clientcl.idl \
             custmgr.idl  \
             customer.idl \
             fee.idl      \
             fileutil.idl \
             savings.idl  \
             sberr.idl    \
             svrbrokr.idl 

.SUFFIXES: .obj .o .c .ih .idl .h .lib .def .rc .res

.c.obj:
  $(CC) -I. -I$(STDINCLUDE) $(CFLAGS) $<

.c.o:
  $(CC) -I. -I$(STDINCLUDE) $(CFLAGSDLL) -Fo$*.o $<

.idl.ih:
  $(SC) -sih -p -c $<

.idl.h:
  $(SC) -sh -p -c $<

.idl.def:
  $(SC) -sdef $<

.def.lib:
  $(IMPLIB) /nologo $*.lib $<

.rc.res:
  $(RC) $(RCFLAGS) -r $<

all: $(STDINCLUDE)\somcorba.bld $(DLLLIST) $(EXELIST) $(SOMIRFILE)

$(STDINCLUDE)\somcorba.bld:
  @echo This sample requires that the SOM toolkit bindings have been built
  @echo with SOMCORBA style object references.
  @exit 1

